<Window x:Class="WinTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Application Usage Tracker" Height="350" Width="525">
    <Grid>
        <DataGrid ItemsSource="{Binding ApplicationInfos}" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ProcessId" Binding="{Binding ProcessInfo.ProcessId}" Width="*"/>
                <DataGridTextColumn Header="Application" Binding="{Binding ProcessInfo.ProcessName}" Width="*"/>
                <DataGridTextColumn Header="Usage Time" Binding="{Binding TimeElapsed}" Width="*"/>
                <DataGridTextColumn Header="State" Binding="{Binding State}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>

