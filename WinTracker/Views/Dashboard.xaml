<Page x:Class="WinTracker.Views.Dashboard"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WinTracker.ViewModels"
      xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800">
    <Page.DataContext>
        <local:DashboardViewModel />
    </Page.DataContext>
    <Grid Margin="65,0,0,0">
        <lvc:PieChart
            Title="{Binding Title}"
            Series="{Binding Series}" >
        </lvc:PieChart>
        <DatePicker Margin="90,11,515,374" SelectedDate="{Binding FromDate, StringFormat=dd/MM/yyyy}" Text="From"></DatePicker>
        <DatePicker Margin="380,11,245,373" SelectedDate="{Binding ToDate, StringFormat=dd/MM/yyyy}" Text="To"/>
        <Button Margin="570,12,85,373" Command="{Binding ApplyDateCommand}">Apply</Button>
    </Grid>
</Page>